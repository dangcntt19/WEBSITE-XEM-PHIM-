        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LANGUAGE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.VIEWS)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.MANUFACTURING_COMPANY)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.MOVIEREVIEW)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.DATECREATE)*@
            @item.DATECREATE.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FILM_STATUS)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.IMAGEID)
