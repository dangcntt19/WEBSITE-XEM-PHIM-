@model IEnumerable<WEBSITE_FILM_002.Models.FILMS>

@{
    ViewBag.Title = "QLFILM";
    Layout = "~/Areas/Admin/Views/Shared/_layout_Admin.cshtml";
}


<p class="mb-5">
    @Html.ActionLink("Phim mới", "CreateFilm","" , new {@class = "buttonCreate mb-5"})
</p>
<table class="table form_input_admin">
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.FILMNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FILMDIRECTOR)
