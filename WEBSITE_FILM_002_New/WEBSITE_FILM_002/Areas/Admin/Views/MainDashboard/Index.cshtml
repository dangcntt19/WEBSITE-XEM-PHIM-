<div class="container form_input_admin" style="height: auto;">
    <div class="row d-flex justify-content-around">
        <div class="col-12 col-md-4 d-flex justify-content-center ">
            <div>
                <h5 class=" mb-5 text-uppercase h4-title text-center">Người đăng phim nhiều</h5>
            </div>
        </div>

        <div class="col-12 col-md-4 d-flex justify-content-center">
            <div>  
                <h5 class="text-center mb-5 text-uppercase h4-title">Phim lượt xem nhiều</h5>
                <div class="row mb-1">
                    <div class="col-2 text-center  font-weight-600"">
                        STT
                    </div>
                    <div class="col-6 text-center font-weight-600">
                        Tên phim
                    </div>
                    <div class="col-4  text-center  font-weight-600"">
                        Lượt xem
                    </div>
                </div>
                @{
                    int count = 1;
                    foreach (var item in ViewBag.ListFilmTopView)
                    {
                        <div class="row mb-1">
                            <div class="col-2 text-center">
                                @(count++)
                            </div>
                            <div class="col-6" style="text-transform: capitalize;">
                                @item.FILMNAME
                            </div>
                            <div class="col-4  text-center">
                                @item.VIEWS
                            </div>
                        </div>

                    }
                }
            </div>
        </div>

        <div class="col-12 col-md-4 d-flex justify-content-center">
            <div>
                <h5 class="text-center mb-5 text-uppercase h4-title">Phim lượt điểm cao</h5>
                <div class="row mb-1">
                    <div class="col-2 text-center  font-weight-600" ">
                        STT
                    </div>
                    <div class="col-6 text-center font-weight-600">
                        Tên phim
                    </div>
                    <div class="col-4  text-center  font-weight-600" ">
                        Điểm
                    </div>
                </div>
                @{
                    count = 1;
                    foreach (var item in ViewBag.ListFilmTopMark)
                    {
                        <div class="row mb-1">
                            <div class="col-2 text-center">
                                @(count++)
                            </div>
                            <div class="col-6" style="text-transform: capitalize;">
                                @item.FILMNAME
                            </div>
                            <div class="col-4  text-center">
                                @item.MOVIEREVIEW
                            </div>
                        </div>

                    }
                }
            </div>
        </div>
    </div>
</div>