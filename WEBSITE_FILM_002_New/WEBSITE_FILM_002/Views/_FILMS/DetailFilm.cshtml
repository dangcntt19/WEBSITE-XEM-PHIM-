@model WEBSITE_FILM_002.Models.FILMS

@{
    ViewBag.Title = "DetailFilm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DetailFilm</h2>
<div>
    <div class="row">
        <div class="col-md-3 col-lg-3 col-lg-1-sm-9 ">
            <img style="width:200px" src="~/Images/FilmPoster/@Model.IMAGEID" alt="Alternate Text" />
            <div>Giá bán: @Model.FILMID
            </div>
        </div>
        <div class="col-md-6 col-lg-6 col-sm-9">
            <div>
                Tên sách: @Model.FILMNAME
            </div>
            <div>
                Chủ đề: @Model.LANGUAGE
            </div>
            
        </div>
    </div>
</div>
